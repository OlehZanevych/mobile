<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="25dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:id="@+id/products_list_item_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/products_list_item_product_type_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="[PRODUC TTYPE NAME]"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/products_list_item_category_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="[PRODUC TTYPE NAME]"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/products_list_item_producer_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="[PRODUCER NAME]"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/products_list_item_cost"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="[PRODUC TTYPE NAME]"
        android:textSize="20sp"/>
</LinearLayout>